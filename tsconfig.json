/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "paths": {
      "md-ui-kit": [
        "projects/md-ui-kit/src"
      ],
      "md-ui-kit/*": [
        "projects/md-ui-kit/src/*"
      ],
      "md-ui-kit/accordion": [
        "projects/md-ui-kit/accordion/src"
      ],
      "md-ui-kit/badge": [
        "projects/md-ui-kit/badge/src"
      ],
      "md-ui-kit/button": [
        "projects/md-ui-kit/button/src"
      ],
      "md-ui-kit/card": [
        "projects/md-ui-kit/card/src"
      ],
      "md-ui-kit/common": [
        "projects/md-ui-kit/common/src"
      ],
      "md-ui-kit/field": [
        "projects/md-ui-kit/field/src"
      ],
      "md-ui-kit/svg": [
        "projects/md-ui-kit/svg/src"
      ],
      "md-ui-kit/tabs": [
        "projects/md-ui-kit/tabs/src"
      ],
      "md-ui-kit/lazy-observed": [
        "projects/md-ui-kit/lazy-observed/src"
      ],
      "md-ui-kit/utils": [
        "projects/md-ui-kit/utils/src"
      ]
    },
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": [
      "ES2022",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
